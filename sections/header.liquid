<div class="relative bg-white" x-data="{ mobileMenuOpen: false, searchBarOpen: false }">
  <div class="mx-auto px-4 sm:px-6">
    <div
      class="flex justify-between items-center py-6 md:justify-start md:space-x-10"
    >
      <!-- LOGO -->
      <div class="flex justify-start lg:flex-1">
        <a href="{{ routes.root_url }}">
          {% if section.settings.logo != blank %}
            <img
                src="{{ section.settings.logo | img_url: '100x'}}"
                width="{{ section.settings.logo_width }}"
            />
          {% else %}
            <h1 class="text-xl font-bold truncate">{{ shop.name }}</h1>
          {% endif %}
        </a>
      </div>
      <!-- MOBILE MENU -->
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button x-on:click="mobileMenuOpen = true" type="button" class="bg-white p-2 inline-flex items-center justify-center focus:outline-none">
          {% render 'icon-menu' %}
        </button>
      </div>

      <!-- NAV -->
      <nav class="hidden md:flex space-x-10" x-data="{ open: false }">
        {% for link in section.settings.menu.links %}
            {% if link.links != blank %}
            <!-- Set button data id to prevent opening simultaneously -->
            {% assign link_handle = link.handle | replace: '-', '_' %}
                <div class="relative" x-data="{ {{ link_handle}} : false}">
                    <button class="inline-flex items-center gap-1 text-base font-semibold text-gray-700 hover:text-gray-400" x-on:click="{{link_handle}} = ! {{link_handle}}">
                        {{ link.title }}
                        {% render 'icon-dropdown' %}
                    </button>
                    <div 
                    x-transition:enter="transition ease-out duration-300"
                    x-transition:enter-start="opacity-0 translate-y-3"
                    x-transition:enter-end="opacity-100 translate-y-0"
                    x-transition:leave="transition ease-out duration-300"
                    x-transition:leave-start="opacity-100 translate-y-0"
                    x-transition:leave-end="opacity-0 translate-y-3"
                    x-show="{{link_handle}}" @click.away="{{link_handle}} = false" class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2">
                        <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                            <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                                {% for childlink in link.links %}
                                    <a href="{{ childlink.url }}" class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100">
                                        <div class="ml-4">
                                            <p class="text-gray-900 text-base font-medium">
                                                {{ childlink.title }}
                                            </p>
                                        </div>
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <a href="{{ link.url }}" class="text-base font-semibold text-gray-700 hover:text-gray-400">{{link.title}}</a>
            {% endif %}
        {% endfor%}
      </nav>
      
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <!-- SEARCH -->
        <button x-on:click="searchBarOpen = true" type="button" class="whitespace-nowrap text-base font-semibold text-gray-700 hover:text-gray-400">
          {% render 'icon-search' %}
        </button>
        <!-- CART-->
        <button @click="$dispatch('toggle-cart')" class="whitespace-nowrap text-base font-semibold text-gray-700 hover:text-gray-400">
          {% render 'icon-shopping-bag' %}
        </button>
        <!-- USER LOGIN/LOGOUT -->
        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a href="{{ routes.account_url }}" class="whitespace-nowrap text-base font-semibold text-gray-700 hover:text-gray-400">{% render "icon-person" %}</a>
            {{"Log out" | customer_logout_link | replace: '<a', '<a class="text-base font-semibold text-gray-700 hover:text-gray-400"'}}
            {% else %}
            {{"Log in" | customer_login_link | replace: '<a', '<a class="text-base font-semibold text-gray-700 hover:text-gray-400"'}}
            {{"Register" | customer_register_link | replace: '<a', '<a class="text-base font-semibold text-gray-700 hover:text-gray-400"'}}
          {% endif %}   
        {% endif %}
      </div>

       <!-- MOBILE MENU CONTAINER -->
       <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
        <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
            <div class="p-5 divide-y-2 divide-gray-50">

                <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->

                <div class="flex items-center justify-between pb-3">
                    <div>
                        <h1 class="text-lg text-gray-500">{{ section.settings.mobile_menu_title }}</h1>
                    </div>
                    <div class="-mr-2">
                        <button x-on:click="mobileMenuOpen = false" type="button" class="bg-white rounded-md p-2 text-gray-500">
                            {% render 'icon-close' %}
                        </button>
                    </div>
                </div>

                <!-- NAVIGATION LINKS FOR MOBILE MENU -->
                <div class="pt-3">
                    <nav class="grid gap-y-7">
                        {% for link in section.settings.menu.links %}
                            {% if link.links != blank %}
                            {% assign mobile_link_handle = link.handle | replace: '-', '_' %}
                                <div class="relative" x-data="{ {{ mobile_link_handle }}: false }">
                                    <button x-on:click="{{ mobile_link_handle }} = ! {{ mobile_link_handle }}" type="button" class="text-base font-semibold text-gray-700 hover:text-gray-400 flex items-center justify-between w-full">
                                        <div>{{ link.title }}</div>
                                        {% render 'icon-dropdown' %}
                                    </button>

                                    <div x-show="{{ mobile_link_handle }}" class="grid gap-y-7 py-3">
                                        {% for childlink in link.links %}
                                            <a href="{{ childlink.url }}" class="-m-3 p-3 mt-2 flex items-center rounded-md font-semibold text-gray-700 hover:text-gray-400 hover:bg-gray-50">
                                                <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% else %}
                                <a href="{{ link.url }}" class="-m-3 p-3 flex items-center rounded-md font-semibold text-gray-700 hover:text-gray-400 hover:bg-gray-50">
                                    {{ link.title }}
                                </a>

                            {% endif %}
                            
                        {% endfor %}
                    </nav>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SEARCH -->
  <div x-show="searchBarOpen" class="w-full absolute top-0 bg-white border">
    <button type="button" x-on:click="searchBarOpen = false" class="absolute top-0 right-0 mr-5 mt-5 text-gray-500">
        {% render 'icon-close' %}
    </button>
    <div class="h-20 flex justify-center items-center">
        <form action="{{ routes.search_url }}" method="get" class="flex-auto">
            <div class="w-1/2 mx-auto relative text-gray-500 px-10 border">
                <input type="search" name="q" placeholder="Search" class="w-full bg-white h-10 px-5 rounded-full text-sm focus:outline-none">
                <button type="submit" class="absolute h-full right-0 top-0 mr-2 md:mr-20 font-semibold text-gray-700 hover:text-gray-400">
                    {% render 'icon-search' %}
                </button>
            </div>
        </form>
    </div>
  </div>
</div>

{% schema %}
{
    "name": "t:sections.header.name",
    "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "t:sections.header.settings.logo.label"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 50,
          "max": 250,
          "step": 10,
          "default": 100,
          "unit": "t:sections.header.settings.logo_width.unit",
          "label": "t:sections.header.settings.logo_width.label"
        },
        {
          "type": "text",
          "id": "mobile_menu_title",
          "default": "Menu",
          "label": "Mobile Menu Title"
        },
        {
          "type" :"link_list",
          "id": "menu",
          "default": "main-menu",
          "label": "Heading Navigation Menu"
        }
    ]
}
{% endschema %}
